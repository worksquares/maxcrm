{
  "name": "maxcrm",
  "version": "0.0.1",
  "private": true,
  "description": "MAXCRM - A modern CRM system",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --filter './apps/*' build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "lint": "pnpm --filter './apps/*' lint",
    "type-check": "pnpm --filter './apps/*' type-check",
    "clean": "pnpm --parallel --filter './apps/*' clean && rm -rf node_modules"
  },
  "keywords": [
    "crm",
    "monorepo",
    "react",
    "vite",
    "typescript"
  ],
  "author": "KOUSALYADS",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
